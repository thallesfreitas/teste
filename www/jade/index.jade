mixin menu(id, ...items)
  ul(id=id)
    each item in items
      if(item=="logo")
       li.logo logo
      else
       li
        a(href=item) 
         = item

mixin menuMobile(id, ...items)
  .logoMobile
  ul(id=id)
    each item in items
       li
        a(href=item) 
         = item

